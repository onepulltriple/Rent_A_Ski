<Window
    x:Class="Rent_A_Ski.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Rent_A_Ski"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="LoginWindow"
    Width="400"
    Height="300"
    ResizeMode="NoResize"
    mc:Ignorable="d">
    <StackPanel>
        <Label Margin="0,20,0,0" Content="Username" />
        <TextBox GotFocus="UsernameTextBoxGetsFocus" Text="{Binding Credentials.Username}" />

        <Label Content="Password" />
        <TextBox GotFocus="PasswordTextBoxGetsFocus" Text="{Binding Credentials.Password}" />

        <Button
            Margin="0,20,0,0"
            Click="StartLogin"
            Content="Log In" />

        <Label
            Name="LoginFailedMessage"
            Margin="0,10,0,0"
            Content="Credentials invalid."
            Foreground="Red"
            Visibility="Hidden" />

    </StackPanel>
</Window>
