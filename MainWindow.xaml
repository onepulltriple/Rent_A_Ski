<Window x:Class="Rent_A_Ski.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rent_A_Ski"
        mc:Ignorable="d"
        Title="Rent-a-Ski" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <Frame
            Name="MainWindowFrame"
            Grid.Row="0"
            NavigationUIVisibility="Hidden"
            />


        <UniformGrid Grid.Row="2" Rows="2">
            <Button Click="ShowAllItems" Content="Show Complete Inventory"/>
            <Button/>
            <Button/>
            <Button/>
            <Button/>
            <Button/>
            <Button/>
            <Button Click="ExitProgram" Content="Exit"/>

        </UniformGrid>
        
        

    </Grid>
</Window>
